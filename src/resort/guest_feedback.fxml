<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="resort.GuestFeedbackController">
    <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true">
        <Image url="@images/resort.jpg"/>
    </ImageView>
    <Label layoutX="475.0" layoutY="39.0" prefHeight="96.0" prefWidth="441.0"
           text="Guest Feedback Form" textFill="#0a0a0a">
        <font>
            <Font name="Freestyle Script" size="40.0"/>
        </font>
    </Label>
    <Button fx:id="btnSubmitFeedback" layoutX="535" layoutY="460" text="Submit Feedback"
            onMouseClicked="#submitFeedback"/>
    <TextArea fx:id="inputFeedback" layoutX="50" layoutY="160" prefWidth="330" prefHeight="390" wrapText="true"/>
    <Label layoutX="482" prefWidth="210" layoutY="162" prefHeight="300" style="-fx-font-weight: bold" wrapText="true"
           text="Please leave any comments or criticism in the field to the left, then press the submit button below. Any and all guest feedback is highly appreciated!"
           textAlignment="CENTER" alignment="CENTER">
        <font>
            <Font name="Freestyle Script" size="30.0"/>
        </font>
    </Label>
    <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false"
            onMouseClicked="#goToPreviousPage" text="Back"/>

</AnchorPane>
