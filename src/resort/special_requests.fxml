<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="resort.SpecialRequestsController">
  <ScrollPane prefHeight="700.0" prefWidth="800.0">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
  </ScrollPane>
  <ImageView fitHeight="700.0" fitWidth="1000.0" pickOnBounds="true">
    <Image url="@images/resort.jpg" />
  </ImageView>
  <ImageView fitHeight="200.0" fitWidth="300.0" layoutX="100.0" layoutY="125.0" pickOnBounds="true">
    <Image url="@images/bedding.jpg" />
  </ImageView>
  <Label layoutX="353.0" layoutY="30.0" text="Special Requests">
    <font>
      <Font name="Freestyle Script" size="40.0" />
    </font>
  </Label>
  <TextArea editable="false" layoutX="470.0" layoutY="148.0" prefHeight="137.0" prefWidth="200.0" text="We provide feather and regular pillows, down comforters, and additional sheets. Please choose which you need and how many." wrapText="true" />
  <ComboBox fx:id="typeOfBedding" layoutX="725.0" layoutY="152.0" prefWidth="150.0" />
  <ComboBox fx:id="quantityOfBedding" layoutX="725.0" layoutY="185.0" prefWidth="150.0" />
  <Button layoutX="728.0" layoutY="225.0" mnemonicParsing="false" onMouseClicked="#goToBeddingConfirmationPage" text="Request" />
  <ImageView fitHeight="200.0" fitWidth="300.0" layoutX="100.0" layoutY="352.0" pickOnBounds="true">
    <Image url="@images/towels.jpg" />
  </ImageView>
  <TextField fx:id="message" layoutX="362.0" layoutY="597.0" prefHeight="25.0" prefWidth="242.0" promptText="Send us a message for additional requests" />
  <Button layoutX="627.0" layoutY="597.0" mnemonicParsing="false" onMouseClicked="#sendMessage" text="Send" />
  <TextArea editable="false" layoutX="483.0" layoutY="375.0" prefHeight="137.0" prefWidth="200.0" text="We provide shampoo, conditioner, body wash, lotion, hand towels, and bath towels. Please choose which you need and how many." wrapText="true" />
  <ComboBox fx:id="typeOfToiletry" layoutX="727.0" layoutY="379.0" prefWidth="150.0" />
  <ComboBox fx:id="quantityOfToiletry" layoutX="727.0" layoutY="412.0" prefWidth="150.0" />
  <Button layoutX="728.0" layoutY="452.0" mnemonicParsing="false" onMouseClicked="#goToToiletryConfirmationPage" text="Request" />
  <Label layoutX="212.0" layoutY="676.0" text="Disclaimer: Please allow a minimum of 60 minutes for all special requests to be fulfilled." textFill="WHITE" />
  <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onMouseClicked="#goToPreviousPage" text="Back" />
</AnchorPane>
